@* Generator: MvcHelper *@
@inherits MultiRando.Web.Core.Helpers.RazorViewBase<dynamic>
@{
    Layout = "Views/Shared/_LayoutDefault.cshtml";
    Reference("~/ScriptsApp/app/auth/AskPasswordController.js");
}
<div class="loginRegisterContainer" data-bind="inject : auth.AskPasswordController, errorMessage: '@(IsPropertyExist(Model, "LoginErrorResMessage") ? Model.LoginErrorResMessage : "")'">
    
   
    <form class="form-horizontal" action="/Auth/ChangePassword" method="POST" data-bind="with: AskPasswordController">
        <div class="alert alert-danger" role="alert" data-bind="visible: failMessage, res: failMessage"> </div>

        <input type="hidden" name="token" value="@(Model.Token)" />
        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">@Res("Res.AskPassword.Password")</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" name="password" data-bind="value: password">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword2" class="col-sm-2 control-label">@Res("Res.AskPassword.PasswordConfirm")</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword2" name="passwordConfirm" data-bind="value: passwordConfirm">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" data-bin="attr:{ disabled : password() != passwordConfirm() }">
                    @Res("Res.AskPassword.Validate")
                </button>
            </div>
        </div>
    </form>

</div>
