@using Nancy
@inherits MultiRando.Web.Core.Helpers.RazorViewBase<dynamic>

<div>

    <div class="row">
        <div class="col-md-6">
            <h2>@Res("Res.Page.Map.Route.Title")</h2>
        </div>
        <div class="col-md-6">
            <div style="margin-top: 22px;" class="pull-right">

                <button class="btn btn-default" title="@Res("Res.Page.Map.Route.Add.Tooltip")" data-bind="click: addRoute">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="panel-group" data-bind="foreach: routes">
        <div class="panel" data-bind="css :  isSelected() ? 'panel-primary' : 'panel-default' ">
            <div class="panel-heading parent-over" role="tab" id="headingOne" data-bind="click: select">
                <h4 class="panel-title">
                    <span class="badge pull-right" data-bind="text: (RouteLength() / 1000).toFixed(2) + 'km'"></span>
                    <span  data-bind="text: Name"></span>
                    <span href="#" class="visible-on-parent-over" style="cursor: pointer" title="@Res("Res.Std.Rename")"
                          data-bind="click: rename, clickBubble : false"><i class="fa fa-pencil"></i></span>
                    <span href="#" class="visible-on-parent-over" style="cursor: pointer" title="@Res("Res.Std.Locate")"
                          data-bind="click: showStart, clickBubble : false"><i class="fa fa-location-arrow"></i></span>
                    <a href="#" class="visible-on-parent-over" style="cursor: pointer" title="@Res(" Res.Std.DownloadRT2")"
                          data-bind="attr:{ href: '/Map/Route/DownloadRt2/' + RouteId() }, click: function(){}, clickBubble : false"><i class="fa fa-download"></i></a>
                </h4>
            </div>
            <div class="panel-collapse collapse in" role="tabpanel" data-bind="css : { 'in':  isSelected }">
                <div class="panel-body">
                    <div class="btn-group btn-group-justified" role="group" data-bind="hidden: isEdit">
                        <a href="#" class="btn btn-danger" data-bind="click: $parent.deleteRoute">@Res("Res.Std.Delete")</a>
                        <a href="#" class="btn btn-primary" data-bind="click: edit, visible: !isEdit()">@Res("Res.Std.Edit")</a>
                        <a href="#" class="btn btn-default" data-bind="click: cancel">@Res("Res.Std.Cancel")</a>
                    </div>
                    <div class="btn-group btn-group-justified" role="group" data-bind="visible: isEdit">
                        <a href="#" class="btn" data-bind="click: function(){ isShortcutMode(!isShortcutMode());  }, css : isShortcutMode() ? 'btn-success' : 'btn-default'">@Res("Res.Std.Shortcut")</a>
                        <a href="#" class="btn btn-default" data-bind="click: reverse">@Res("Res.Std.Reverse")</a>
                    </div>
                    <div class="btn-group btn-group-justified" role="group" data-bind="visible: isEdit">
                        <a href="#" class="btn btn-primary" data-bind="click: $parent.saveRoute">@Res("Res.Std.Save")</a>
                        <a href="#" class="btn btn-default" data-bind="click: cancel">@Res("Res.Std.Cancel")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>