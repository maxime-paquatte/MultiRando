@* Generator: MvcHelper *@
@inherits MultiRando.Web.Core.Helpers.RazorViewBase<dynamic>
@{
    Layout = "Views/Shared/_LayoutDefault.cshtml";
    Reference("~/ScriptsApp/app/map/MapController.js");
}

<div class="container-fluid" data-bind="inject : map.MapController">
    <div class="row" data-bind="with: Map">
        <div class="col-xs-3">
            <div class="row">
                <div class="col-sm-8">
                    <h1>@Res("Res.Std.SiteTitle")</h1>
                </div>
                <div class="col-sm-4">
                    <div style="margin-top: 22px;">
                        <button class="btn btn-default" title="@Res("Res.Page.Map.AddInterest.Tooltip")" data-bind="click: addInterest">
                            <i class="fa fa-map-marker"></i>
                            <sup class="fa fa-plus"></sup>
                        </button>
                        <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-default">
                            <i class="fa fa-cog"></i>
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel">
                            <li><a href="#">Action</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">@Res("Res.Page.Map.CurrentActivity")</li>
                            <!-- ko foreach: activityFlags -->
                            <li data-bind="css: { disabled : $parent.currentActivity() == key }">
                                <a href="#" data-bind="click: function(){ $parent.currentActivity(key); }">
                                    <span data-bind="text: ep.res('Res.Page.Map.Interests.activityFlags.' + key)"></span>
                                </a>
                            </li>
                            <!-- /ko -->
                        </ul>

                    </div>
                </div>
            </div>
            @Html.Partial("Views/Map/_SegmentsEdit")
        </div>
        <div class="col-xs-9">
            <div id="map-canvas" style="width: 100%; height: 500px" data-bind="style: { height : pageHeight() - 5 + 'px' }"></div>
        </div>
    </div>
</div>

<script type="text/html" id="interest-details">
    @Html.Partial("Views/Map/_InterestDetails")
</script>